@model Library_Management_System.Models.LR_AssignRolestoUsers

@{
    ViewBag.Title = "";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-basic">
        <div class="row">
            <div class=" col-md-4">
                <div class="box box-primary" style="margin-left:300px;">
                    <div class="text-body" style="margin:10px;">
                        <h3>Assign Roles to Users</h3>
                        <div class="box-body">
                            <div class="form-group">
                                <label class="form-label"> User ID:</label>

                                <div class="input-group col-sm-9">

                                    @Html.EditorFor(model => model.user, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.user, "", new { @class = "text-danger" })
                                </div>

                            </div>


                            <div class="form-group">
                                <label class="form-label">Select Category:</label>

                                <div class="input-group col-sm-9">
                                    @Html.DropDownListFor(model => model.usercategory_id, (SelectList)ViewBag.cat, htmlAttributes: new
                                    {
                                        @class = "input form-control",
                                    })
                                </div>
                                @Html.ValidationMessageFor(model => model.usercategory_id, "", new { @class = "text-danger" })

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <input type="submit" value="Create" class="btn btn-primary btn-submit DisableFormSubmitButton" style="width: 110px;margin-bottom:15px;margin-left:120px; " />
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>


    <div>
        @Html.ActionLink("Back to List", "ViewUserRoles")
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
















