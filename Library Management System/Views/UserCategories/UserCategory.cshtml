                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label">Max Issue Days:</label>

                                        <div class="input-group">
                                            @Html.EditorFor(model => model.FirstIDays, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.FirstIDays, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>
                            </div>




                            <div class="row" style="margin-left:0px;">

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label">Max No of Attempts:</label>

                                        <div class="input-group">
                                            @Html.EditorFor(model => model.attempts, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.attempts, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>

                            </div>



                        </div>
                        <div class="form-group">
                            <div class="col-md-3  pull-right" style="margin-top:10px;">
                                <input type="submit" value="Create" class="btn btn-primary btn-submit DisableFormSubmitButton" style="width: 110px;margin-bottom:15px;margin-left:120px; " />
                            </div>
                        </div>
                    </div>
                 
                </div>


            </div>
        </div>
    </div>


    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}








