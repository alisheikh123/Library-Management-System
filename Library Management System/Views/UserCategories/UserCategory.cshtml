@model Library_Management_System.Models.LR_UserCategory

@{
    ViewBag.Title = "";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-basic">
        <div class="row">
            <div class=" col-md-8">
                <div class="box box-primary" style="margin-left:40px;">
