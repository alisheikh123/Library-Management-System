@model Library_Management_System.Models.LR_BookCategory

@{
    ViewBag.Title = "";
}

<link href="~/Content/form.css" rel="stylesheet" />
<link href="~/Content/table.css" rel="stylesheet" />

<div class="row">
    <div class="col-xs-4 col-md-7">
        <div class="box box-default" style="align-content:center; margin-left:200px;">
            <div class="form-basic">
                <div class="text-body">
                    <h2 style="color:#6caee0">Delete</h2>
                    <h3>Are you sure you want to delete this?</h3>

                    <div class="form-title-row">

                    </div>

                    <hr />
                    <div class="form-row">

                        <div class="text-row">
                            <p class="text-element heading">Title</p>

                            <p class="text-element">   @Html.DisplayFor(model => model.book.name)</p>
                        </div>
                        <div class="text-row">
                            <p class="text-element heading">Article Category</p>

                            <p class="text-element">   @Html.DisplayFor(model => model.book.article_category)</p>
                        </div>
                        <div class="text-row">
                            <p class="text-element heading">Status</p>

                            <p class="text-element">   @Html.DisplayFor(model => model.book.status)</p>
                        </div>
                        <div class="text-row">
                            <p class="text-element heading">Type Category</p>

                            <p class="text-element">    @Html.DisplayFor(model => model.category.name)</p>
                        </div>

                    </div>



                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <p style="text-align:left">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "ViewCat")
            </p>
            </div>
            }
        </div>
</div>


















