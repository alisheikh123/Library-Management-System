<script>

    function reserve(isbn, stu_id,author,cat) {
        var isbn = isbn;
        var stu_id = stu_id;
        var author = author;
        var cat = cat;
        $.ajax({
            url: "/BookIssue/Reservation",
            type: "GET",
            dataType: "text",
            data: {
                code: isbn,
                id: stu_id,
                author: author,
                cat:cat
            },
            success: function (data) {
                if (data == "True") {
                    alert("Book Reserved Sucessfully")
                    location.reload();
                }
   
                else if (data == "False") {

                    alert("Failed.All Books are already Reserved... ")
                    location.reload();
                }


            }

        });



    }
</script>


