@model Library_Management_System.Models.LR_Issue

@{
    ViewBag.Title = "Details";
}
<link href="~/Content/form.css" rel="stylesheet" />
<link href="~/Content/table.css" rel="stylesheet" />


<div class="row">
    <div class="col-xs-8 col-md-8">
        <div class="box box-default" style="align-content:center; margin-left:170px;">
            <div class="form-basic">
                <div class="text-body">
                    <div class="form-title-row">
                        <h2 style="color:#6caee0">Details</h2>
                    </div>

                    <hr />
                    <div class="form-row">

                        <div class="text-row">
                            <p class="text-element heading">Student ID:</p>

                            <p>@Html.DisplayFor(model => model.student_id)</p>
                        </div>

                        <div class="text-row">
                            <p class="text-element heading">Author Name:</p>

                            <p>@Html.DisplayFor(model => model.author_name)</p>
                        </div>
                        <div class="text-row">
                            <p class="text-element heading">Title:</p>
                            @if (Model.artCat_id != 1)
                            {
                        <p>@Html.DisplayFor(model => model.title)</p>
                            }
                            else
                            {
                                <p> ----</p>
                                }
                        </div>
                        <div class="text-row">


                            <p class="text-element heading">ISBN:</p>
                            @if (Model.artCat_id == 1)
                            {
                                 <p>@Html.DisplayFor(model => model.ISBN)</p>

                            }
                            else
                            {
                                <p>----</p>
                               }
                        </div>
                        <div class="text-row">
                            <p class="text-element heading">Issue Date:</p>

                            <p>@Html.DisplayFor(model => model.Issue_Date)</p>
                        </div>
                        <div class="text-row">
                            <p class="text-element heading">Expiry Date:</p>

                            <p>@Html.DisplayFor(model => model.ExpiryDate)</p>
                        </div>
                        <div class="text-row">
                            <p class="text-element heading">Status:</p>

                            <p>@Html.DisplayFor(model => model.Status)</p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
