@model IEnumerable<Library_Management_System.Models.LR_Books>

@{
    ViewBag.Title = "Search";
}


@using (Html.BeginForm("Searching", "BookIssue", FormMethod.Get))
{

    <div class="row">
        <div class="col-xs-6 col-md-6">
            <div class="box box-default" style="width:550px;">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Search by Title</label>
                                <div class="input-group img-responsive">


                                    @Html.TextBox("search")
                                    <input type="submit" name="submit" value="Search" style="margin-left:20px;" />


                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="dropdown">
                                <button class="btn btn-success dropdown-toggle" type="button"  style="margin-top:20px;"  data-toggle="dropdown">
                                    Search Type
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="~/BookIssue/Searching" id="books">Book</a></li>
                                    <li><a href="~/BookIssue/searchNewcat">Newspaper</a></li>
                                    <li><a href="~/BookIssue/searchmagNew">Magazine</a></li>
                                    <li><a href="~/BookIssue/searchjouNew">Journal</a></li>
                                    <li><a href="~/AlliedMaterial/thesisView">Thesis</a></li>
                                    <li><a href="~/AlliedMaterial/fypview">FYP Reports</a></li>
                                    <li><a href="~/AlliedMaterial/cdview">CD/Video Cassettes </a></li>
                                    <li><a href="~/AlliedMaterial/novelview">Novels</a></li>
                                    <li><a href="~/AlliedMaterial/pamphlets">Pamphlets</a></li>

                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}

    









