<script>

    function BooksApplyFilter() {
        debugger;
        var s = $('#BookStatusList').val();
        $.ajax({
            url: '/BookIssue/Status',
            type: "GET",
            dataType: "text",
            data: { code: s }, // passs data to server
            success: function (result) { // revive data from server

                $("#tablebody").empty().append(result);
            }
        });
    }

</script>




