@model IEnumerable<Library_Management_System.Models.LR_JournalsNews>

@{
    ViewBag.Title = "";
}



@using (Html.BeginForm("AdvanceSearchJournal", "BookIssue", FormMethod.Get))
{

    <div class="row">
        <div class="col-xs-7 col-md-7">
            <div class="box box-default">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Advance Search</label>
                                <div class="input-group img-responsive">
                                    <div style="background-color: #95b0d6;
                                    height: 3px;">
                                    </div>
                                    <br /><b> Search By: </b><br />
                                    @Html.RadioButton("option", "Name")
                                    <text style="margin-right:90px;">Name</text>

                                    @Html.RadioButton("option", "PublisherName")
                                    <text>Publisher Name</text><br /><br />

                                    @Html.RadioButton("option", "ArticleCategory")
                                    <text style="margin-right:34px;">Article Category</text>

                                    @Html.RadioButton("option", "Author")
                                    <text>Author</text><br /><br />


                                    @Html.TextBox("search")
                                    <input type="submit" name="submit" value="Search" />
                                    <hr />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Filter By Status</label>
                                <div class="input-group img-responsive">

                                    @Html.DropDownList("LOgfilteritems", null, new { @class = "selectpicker", @onchange = "LogsApplyFilter()" })


                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="dropdown">
                                <button class="btn btn-warning dropdown-toggle" style="margin-top:20px;" type="button" data-toggle="dropdown">
                                    Search Type
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="~/BookIssue/AdvanceSearch" id="books">Book</a></li>
                                    <li><a href="~/BookIssue/searchNew">Newspaper</a></li>
                                    <li><a href="~/BookIssue/searchmagNew">Magazine</a></li>
                                    <li><a href="~/BookIssue/AdvanceSearchJournal">Journal</a></li>
                                    <li><a href="~/AlliedMaterial/AdvanceSearchAllied">Thesis</a></li>
                                    <li><a href="~/AlliedMaterial/fypview">FYP Reports</a></li>
                                    <li><a href="~/AlliedMaterial/cdview">CD/Video Cassettes </a></li>
                                    <li><a href="~/AlliedMaterial/novelview">Novels</a></li>
                                    <li><a href="~/AlliedMaterial/pamphlets">Pamphlets</a></li>


                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


