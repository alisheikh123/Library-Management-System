<script>

    function LogsApplyFilter() {
        var s = $('#LOgfilteritems').val();
        $.ajax({
            url: '/BookIssue/LogsApplyFilterjournal',
            type: "GET",
            dataType: "text",
            data: { code: s },
            success: function (newmodel) {

                $("#tablebody").empty().append(newmodel);
            }
        });
    }

</script>






