@model IEnumerable<Library_Management_System.Models.LR_JournalsNews>


@{
    ViewBag.Title = "List of Journal & NewsPaper";
}

<script src="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#reqtbl').DataTable();
    });
</script>

<html>
<body>

    <div class="form-basic">
        <p data_toggle="tooltip" title="Create new books">
            <button id="btn" class="btn  btn-warning">Create new</button>
        </p>
        @*<p style="text-align:left;">
                @Html.ActionLink("Create New", "AddBooks")
            </p>*@

        <div class="table-responsive">
            <table style="width:100%;" class="table-responsive table-condensed table-bordered table-hover table-striped" id="reqtbl">
                <thead class="table-header">
                    <tr class=" headingStyle label-primary">

                        <th style="width:90px;">
                            <strong>
                                Title
                            </strong>
                        </th>
                        <th>
                            <strong>
                                Author Name
                            </strong>
                        </th>
                        <th>
                            <strong>
                                Publisher Name
                            </strong>
                        </th>
                        <th>
                            <strong>
                                Cost
                            </strong>
                        </th>
                        <th>
                            <strong>
                                Purchase Date
                            </strong>
                        </th>
                        <th style="width:25px;">
                            <strong>
                                Status
                            </strong>
                        </th>
                        <th>
                            <strong>
                                Category
                            </strong>
                        </th>
                        <th style="width:4px;">
                            <strong>
                                Total Quantity
                            </strong>
                        </th>
                        <th style="width:4px;">
                            <strong>
                                Remaining Quantity
                            </strong>
                        </th>
                        <th>
                            <strong>
                                Action
                            </strong>
                        </th>
                    </tr>
                </thead>
                <tbody class="table-body" id="tablebody">
                    @Html.Partial("_JournalList", Model)
                </tbody>
            </table>
        </div>
    </div>

    <div id="myModalSave" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Select Category</h4>
                </div>
                <div class="modal-body" style="padding:30px">
                    @using (Html.BeginForm("CreateNewBooks", "JournalNews", null, FormMethod.Post, null))
                    {
                    <div class="form-group">
                        <label>Category</label>
                        <select class="input form-control valid" id="Role" name="Role">
                            @foreach (var item in ViewBag.prioritylist)
        {
                    <option value="@item.Value">@item.Text</option>
}
                        </select>
                        @*@Html.Partial("_Artcategory")*@
                    </div>
                        <br />
                        <button type="submit" id="btnSave" class="btn btn-success">Create</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    }
                </div>

            </div>
        </div>
    </div>




</body>
</html>

<script type="text/javascript">
    $(document).on("click", "#btn", function () {
        $('#myModalSave').modal('hide');
        $('#myModalSave').modal();
    });

</script>



