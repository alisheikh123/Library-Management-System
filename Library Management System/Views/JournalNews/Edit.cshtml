                                            <i class="fa fa-server"></i>
                                        </div>
                                        @Html.EditorFor(model => model.Eigen_Factor, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.Eigen_Factor, "", new { @class = "text-danger" })
                                </div>
                            </div>


