@model IEnumerable <Library_Management_System.Models.LR_Fine>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dayLimit)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dayLimit)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.fineId }) |
                @Html.ActionLink("Details", "Details", new { id = item.fineId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.fineId })
            </td>
        </tr>
    }

</table>
